<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/dark"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/headertitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firebase Crashlytics"
                android:fontFamily="@font/mmedium"
                android:textColor="@color/blueSecond"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="50dp"/>

            <TextView
                android:id="@+id/subtitle"
                android:textAlignment="center"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Crashlytics menghemat waktu pemecahan masalah dengan mengelompokkan error secara cerdas dan menunjukkan penyebabnya."
                android:fontFamily="@font/mlight"
                android:textColor="@color/silver"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/headertitle"/>
            <ImageView
                android:id="@+id/ic_cards"
                android:src="@drawable/crash"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/subtitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <LinearLayout
                android:id="@+id/parent_result"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/ic_cards">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/resultOne"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="120dp">
                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/mprogramminganimation"
                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/resultTwo"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="120dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/pencapaian"
                            />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/resultThree"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="120dp">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/test"
                            />



                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btn_next_course"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:fontFamily="@font/mmedium"
                android:background="@drawable/bg_btn_primary"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:text="Next Course"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="56dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="56dp"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/parent_result"/>



        </androidx.constraintlayout.widget.ConstraintLayout>





    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>